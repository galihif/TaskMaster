<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.giftech.taskmastertest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TaskMasterTest">
        <activity android:name="com.giftech.taskmastertest.ui.intro.Intro3Activity"></activity>
        <activity android:name="com.giftech.taskmastertest.ui.intro.Intro2Activity" />
        <activity android:name="com.giftech.taskmastertest.ui.intro.Intro1Activity" />
        <activity android:name=".ui.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.HistoryActivity" />
        <activity android:name="com.giftech.taskmastertest.ui.auth.signin.SignInActivity" />
        <activity android:name="com.giftech.taskmastertest.ui.auth.signup.SignUpActivity" />
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ExampleAppWidgetConfig">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver android:name="com.giftech.taskmastertest.ui.widget.ExampleWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/example_appwidget_info"/>
        </receiver>

        <service
            android:name="com.giftech.taskmastertest.ui.widget.ExampleWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver android:name="com.giftech.taskmastertest.core.services.notification.ReminderBroadcast" />
    </application>

</manifest>